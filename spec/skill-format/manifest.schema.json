{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Skill Manifest",
  "type": "object",
  "required": ["name", "version", "entrypoint", "artifact", "capabilities", "signers"],
  "additionalProperties": false,
  "properties": {
    "name": {"type": "string"},
    "version": {"type": "string"},
    "entrypoint": {"type": "string"},
    "artifact": {
      "type": "string",
      "pattern": "^sha256:[0-9a-f]{64}$"
    },
    "capabilities": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["kind", "value"],
        "additionalProperties": false,
        "properties": {
          "kind": {"type": "string"},
          "value": {"type": "string"}
        }
      }
    },
    "signers": {
      "type": "array",
      "items": {"type": "string"}
    }
  }
}
