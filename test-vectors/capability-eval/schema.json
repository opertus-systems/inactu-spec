{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Capability Evaluation Vector (v0)",
  "type": "object",
  "required": ["name", "policy", "cases"],
  "additionalProperties": false,
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1
    },
    "policy": {
      "type": "object"
    },
    "cases": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["capability", "expect"],
        "additionalProperties": false,
        "properties": {
          "capability": {
            "type": "object",
            "required": ["kind", "value"],
            "additionalProperties": false,
            "properties": {
              "kind": {"type": "string"},
              "value": {"type": "string"}
            }
          },
          "expect": {
            "type": "string",
            "enum": ["allow", "deny"]
          },
          "note": {
            "type": "string"
          }
        }
      }
    }
  }
}
